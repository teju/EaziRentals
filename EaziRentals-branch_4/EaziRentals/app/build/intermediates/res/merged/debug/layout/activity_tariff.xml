<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="eazi.com.eazirentals.Cart">
    <include layout="@layout/normal_header"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/dark_gray"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="GUARANTEED QUALITY : OUR TARIFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="BIKE BRAND"
            android:id="@+id/bike_brand"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"></View>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="BIKE NAME"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:id="@+id/bike_name"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"></View>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textAlignment="center"
            android:id="@+id/tariff_per_hour"
            android:text="TARIFF PER HOUR\nMONDAY - FRIDAY"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"></View>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:id="@+id/tariff_per_day"
            android:padding="5dp"
            android:text="TARIFF PER DAY\nMONDAY - FRIDAY"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"></View>

        <TextView
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:id="@+id/tariff_per_day_weekend"
            android:text="TARIFF PER DAY\nSATURDAY - SUNDAY"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dark_gray"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/tariff"></LinearLayout>
    </ScrollView>
</LinearLayout>
