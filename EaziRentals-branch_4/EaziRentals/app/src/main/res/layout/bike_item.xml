<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="7dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/bike_img"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/bike"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bike_name"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textAlignment="center"
                android:text="APACHE RTR 160"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hebbal (Infosys)"
                android:textAlignment="center"
                android:drawableLeft="@drawable/address_marker"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:drawableTint="@color/dark1_gray"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:text="Rs 599"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:textSize="17dp"
        android:visibility="visible"
        android:id="@+id/add_bikes_button"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/buttob_bg"
        android:text="ADD TO CART"/>

</LinearLayout>