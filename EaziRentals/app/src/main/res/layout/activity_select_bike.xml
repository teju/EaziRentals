<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eazi.com.eazirentals.SelectBike">
    <include layout="@layout/header"
        android:id="@+id/header">
    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:id="@+id/top_l"
        android:orientation="horizontal"
        android:layout_below="@+id/header">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Up"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="7 June, 2 PM"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Drop Off" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="7 June, 11 PM"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_l"
        android:text="CHOOSE YOUR FLEET"
        android:textSize="18dp"
        android:textAlignment="center"
       android:id="@+id/title_text" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:text="info! Please choose your bike to display the avialability"
        android:textSize="10dp"
        android:textAlignment="center"
        android:id="@+id/sub_title" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:columnWidth="165dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:horizontalSpacing="0dp"
        android:layout_below="@+id/sub_title"
        android:stretchMode="spacingWidthUniform" />
    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/gridview"
        android:onClick="selectNow"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttob_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Book Now"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
