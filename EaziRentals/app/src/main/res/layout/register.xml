<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/rootview"
    android:background="@color/yellow"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <ScrollView android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/yellow"
        android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/yellow"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register with us"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/title"
            android:textAllCaps="true"
            android:textColor="@color/black" />
        <EditText
            android:layout_width="match_parent"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:id="@+id/name"
            android:inputType="text"
            android:layout_marginLeft="60dp"
            android:textSize="16dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="6dp"
            android:hint="Full Name"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:padding="12dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="Mobile Number"
        android:padding="12dp"
        android:textSize="16dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:drawableLeft="@drawable/cellphone"
        android:drawablePadding="6dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:id="@+id/email"
        android:padding="12dp"
        android:hint="Email"
        android:textSize="16dp"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="6dp"
        android:textColor="@color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:id="@+id/password"
            android:padding="12dp"
            android:hint="Password"
            android:textSize="16dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/eye"
            android:drawablePadding="6dp"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:id="@+id/rpassword"
            android:padding="12dp"
            android:hint="Repeat Password"
            android:textSize="16dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/eye"
            android:drawablePadding="6dp"
            android:textColor="@color/black" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:id="@+id/dl"
            android:padding="12dp"
            android:hint="Driving License Number"
            android:textSize="16dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/dl"
            android:drawablePadding="6dp"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:id="@+id/address"
            android:padding="12dp"
            android:hint="Address"
            android:textSize="16dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/address_marker"
            android:drawablePadding="6dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginTop="10dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/city"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/city"
                android:padding="12dp"
                android:hint="City"
                android:textSize="16dp"
                android:drawablePadding="6dp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginTop="10dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/state"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/state"
                android:padding="12dp"
                android:hint="State"
                android:textSize="16dp"
                android:drawableLeft="@drawable/state"
                android:drawablePadding="6dp"
                android:textColor="@color/black" />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:id="@+id/referral_id"
            android:padding="12dp"
            android:hint="Referral Id"
            android:textSize="16dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/account_edit"
            android:drawablePadding="6dp"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/terms_conditions"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/agree"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:id="@+id/terms"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Accept Terms &amp; Conditions"
                android:textColor="@color/white"
                android:textAlignment="center" />
        </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="35dp"
        android:id="@+id/buttonclick"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/buttob_bg"
        android:text="REGISTER"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>
